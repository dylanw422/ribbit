{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:setup": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "CONVEX_DEPLOY_KEY",
    "MAGICUI_PRO_REGISTRY_TOKEN",
    "POLAR_ORGANIZATION_TOKEN",
    "POLAR_WEBHOOK_SECRET"
  ]
}
